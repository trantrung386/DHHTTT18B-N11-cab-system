		{
			"name": "Ride History",
			"item": [
				{
					"name": "Get Ride History",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/rides?page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["rides"],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Items per page (max 50)"
								}
							]
						},
						"description": "Get paginated ride history"
					},
					"response": []
				},
				{
					"name": "Get Ride Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/rides/:rideId",
							"host": ["{{base_url}}"],
							"path": ["rides", ":rideId"],
							"variable": [
								{
									"key": "rideId",
									"value": "ride-123",
									"description": "Ride ID"
								}
							]
						},
						"description": "Get details of a specific ride"
					},
					"response": []
				},
