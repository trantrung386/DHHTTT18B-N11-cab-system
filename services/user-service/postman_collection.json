						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"rating\": 5,\n  \"review\": \"Great ride! Very comfortable and driver was professional.\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/rides/:rideId/rate",
							"host": ["{{base_url}}"],
							"path": ["rides", ":rideId", "rate"],
							"variable": [
								{
									"key": "rideId",
									"value": "ride-123"
								}
							]
						},
						"description": "Rate and review a completed ride"
					},
					"response": []
				}
			]
		},
