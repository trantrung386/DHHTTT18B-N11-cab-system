		{
			"name": "Internal API",
			"item": [
				{
					"name": "Add Ride to History (Internal)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Internal-Service",
								"value": "booking-service",
								"description": "Internal service identifier"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": \"user-123\",\n  \"rideId\": \"ride-456\",\n  \"driverId\": \"driver-789\",\n  \"driverName\": \"John Driver\",\n  \"driverRating\": 4.8,\n  \"vehicle\": \"Toyota Camry\",\n  \"licensePlate\": \"30A-12345\",\n  \"pickup\": {\n    \"address\": \"123 Main St\",\n    \"coordinates\": {\n      \"lat\": 10.762622,\n      \"lng\": 106.660172\n    }\n  },\n  \"destination\": {\n    \"address\": \"456 Park Ave\",\n    \"coordinates\": {\n      \"lat\": 10.775658,\n      \"lng\": 106.700428\n    }\n  },\n  \"status\": \"completed\",\n  \"requestedAt\": \"2024-01-15T10:00:00Z\",\n  \"acceptedAt\": \"2024-01-15T10:02:00Z\",\n  \"startedAt\": \"2024-01-15T10:05:00Z\",\n  \"completedAt\": \"2024-01-15T10:30:00Z\",\n  \"baseFare\": 25000,\n  \"distance\": 5.5,\n  \"duration\": 1500,\n  \"distanceFare\": 15000,\n  \"timeFare\": 10000,\n  \"tolls\": 0,\n  \"taxes\": 5000,\n  \"discount\": 0,\n  \"totalAmount\": 55000,\n  \"currency\": \"VND\",\n  \"paymentMethod\": \"wallet\",\n  \"route\": {\n    \"distance\": 5500,\n    \"duration\": 1500,\n    \"polyline\": \"encoded_polyline_string\"\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/internal/rides",
							"host": ["{{base_url}}"],
							"path": ["internal", "rides"]
						},
						"description": "Internal API: Add a completed ride to user history (called by booking service)"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3010/api/users",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string",
			"description": "JWT token (if authentication is enabled)"
		},
		{
			"key": "user_id",
			"value": "user-123",
			"type": "string",
			"description": "User ID for testing (sent in X-User-Id header)"
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-add X-User-Id header to all requests",
					"if (pm.collectionVariables.get('user_id')) {",
					"    pm.request.headers.add({",
					"        key: 'X-User-Id',",
					"        value: pm.collectionVariables.get('user_id')",
					"    });",
					"}"
				]
			}
		}
	]
